<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/main_activity_fg"
        android:scaleType="centerCrop"
        android:src="@drawable/header1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/signup_main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_rounded_button"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/cairo_bold"
            android:theme="@style/main_button_style" />

        <Button
            android:id="@+id/edit_user_main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/main_rounded_button"
            android:text="Edit User Data"
            android:textAllCaps="false"
            android:fontFamily="@font/cairo_bold"
            android:textStyle="bold"
            android:theme="@style/main_button_style" />

        <Button
            android:id="@+id/new_design_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/new_design_btn_bg"
            android:text="New Design"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/cairo_bold"
            android:theme="@style/new_design_main_button_style" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>